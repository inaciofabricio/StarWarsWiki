<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_nome_pessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:hint="Nome"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.485" />

        <TextView
            android:id="@+id/txt_peso_pessoa"
            android:layout_width="98dp"
            android:layout_height="19dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:hint="Peso"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nome_pessoa"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_altura_pessoa"
            android:layout_width="91dp"
            android:layout_height="18dp"
            android:layout_marginBottom="-9dp"
            android:layout_marginTop="5dp"
            android:hint="Altura"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_nome_pessoa"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/txt_peso_pessoa"
            android:layout_marginLeft="17dp" />

        <TextView
            android:id="@+id/txt_genero_pessoa"
            android:layout_width="81dp"
            android:layout_height="19dp"
            android:hint="Genero"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/txt_altura_pessoa"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nome_pessoa" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>